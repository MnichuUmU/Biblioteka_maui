<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Biblioteka_v1.Views"
             x:Class="Biblioteka_v1.Views.BookPopUp">

    <Border Stroke="Purple" StrokeThickness="2" Padding="20, 20" WidthRequest="300" HorizontalOptions="Center" VerticalOptions="Center" Background="Black">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="40,40,40,40"/>
        </Border.StrokeShape>
        <Grid HeightRequest="350">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="35"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="lbl_tytle" Grid.Row="0" Grid.ColumnSpan="2" HorizontalOptions="Center" FontSize="16"/>
            <Label Text="Autor:" Grid.Row="1" Grid.Column="0"/>
            <Label Text="Rok wydania:" Grid.Row="2" Grid.Column="0"/>
            <Label Text="Gatuenk:" Grid.Row="3" Grid.Column="0"/>
            <Label Text="Dostępne?:" Grid.Row="4" Grid.Column="0"/>

            <Label x:Name="lbl_autor" Grid.Row="1" Grid.Column="1"/>
            <Label x:Name="lbl_releaseDate" Grid.Row="2" Grid.Column="1"/>
            <Label x:Name="lbl_tags" Grid.Row="3" Grid.Column="1"/>
            <Label x:Name="lbl_stan" Grid.Row="4" Grid.Column="1"/>

            <Button x:Name="btn_rent" Text="Wypożycz" Grid.Row="5" Grid.ColumnSpan="2" Background="Purple" WidthRequest="200" IsVisible="False" Clicked="btn_rent_Clicked"/>
            <Button x:Name="btn_return" Text="Zwróć" Grid.Row="5" Grid.ColumnSpan="2" Background="LightGray" WidthRequest="200" IsVisible="False" Clicked="btn_return_Clicked"/>
        </Grid>
        

    </Border>
</ContentView>